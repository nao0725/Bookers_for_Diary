
<script src="https://kit.fontawesome.com/f03fd448b3.js" crossorigin="anonymous"></script>

<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render "users/info", user: @user %>
        <%= render "relationships/follow", user: @user %>
        <%= render 'books/new', book: @book %>
      </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <tbody>
             <% @books.each do |book| %>
            <tr>
                <td><%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:'40x50' %>
                  <% end %></td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      
      <h3>投稿数の前日比・前週比</h3>
        <table class="table">
          <thead>
            <tr>
              <th>今日の投稿数</th>
              <th>前日の投稿数</th>
              <th>前日比</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><%= current_user.books.where('created_at > ?', Date.today).count %></th>
              <th><%= current_user.books.where('created_at > ?', Time.).count %></th>
              <th>すうじ</th>
            </tr>
          </tbody>
          <thead>
            <tr>
              <th>今週の投稿数</th>
              <th>前週の投稿数</th>
              <th>前週比</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th>すうじ</th>
              <th>すうじ</th>
              <th>すうじ</th>
            </tr>
          </tbody>
        </table>
      
        
    </div>
  </div>
</main>